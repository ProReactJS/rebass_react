/** @jsx React.DOM */

var React = require('react');

module.exports = React.createClass({

  getDefaultProps: function() {
    return {
      theme: 'mid-gray',
      inverse: false
    };
  },

  isInverse: function() {
    var theme = this.props.theme || null;
    switch (theme) {
      case 'yellow':
        return false;
      default: 
        return true;
    }
  },

  render: function() {
    var theme = 'bg-' + this.props.theme;
    theme += this.isInverse() ? ' white' : '';
    var messageClass = 'bold flex flex-center px2 mb2 rounded ' + theme;
    return (
      <div className={messageClass}>
        <div className="flex-auto py2">
          {this.props.children}
        </div>
        <a href="#!" className="h3 white" title="Dismiss">&times;</a>
      </div>
    )
  }

});

