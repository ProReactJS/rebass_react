{
  "name": "rebass",
  "version": "0.0.1",
  "description": "React components for Basscss",
  "author": "Brent Jackson",
  "license": "MIT",
  "dependencies": {
    "fuzzy": "^0.1.0"
  },
  "devDependencies": {
    "browserify": "^8.0.3",
    "countries-in-the-world": "^1.0.4",
    "envify": "^3.2.0",
    "http-server": "^0.7.4",
    "jsx-loader": "^0.12.2",
    "lodash": "^3.1.0",
    "node-jsx": "^0.12.4",
    "parallelshell": "^1.0.4",
    "react": "^0.12.2",
    "react-tools": "^0.12.2",
    "reactify": "^1.0.0",
    "uglify": "^0.1.1",
    "uglifyify": "^3.0.1",
    "watch": "^0.14.0",
    "watchify": "^2.3.0"
  },
  "keywords": [
    "React",
    "Components",
    "react-component",
    "UI",
    "Basscss"
  ],
  "scripts": {
    "watchify": "watchify docs/app.js -o docs/js/app.min.js",
    "uglify": "uglify docs/js/app.js -o docs/js/app.min.js",
    "watch:uglify": "watch 'npm run uglify' ./docs/js",
    "build:js": "NODE_ENV=production browserify docs/app.js -o docs/js/app.js",
    "build:html": "node docs/build",
    "watch:html": "watch 'npm run build:html' ./docs",
    "jsx": "jsx -x jsx src dist",
    "watch:jsx": "jsx -x jsx -w src dist",
    "serve": "http-server -p 8000 ",
    "start": "parallelshell 'npm run watch:jsx' 'npm run watchify' 'npm run watch:html' 'npm run serve'"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify",
      "uglifyify"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jxnblk/rebass.git"
  },
  "bugs": {
    "url": "https://github.com/jxnblk/rebass/issues"
  },
  "homepage": "https://github.com/jxnblk/rebass"
}
