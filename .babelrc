{
  presets: [
    'stage-0',
    'react'
  ],
  env: {
    cjs: {
      presets: [
        [ 'env', {
          targets: {
            node: true
          }
        } ]
      ]
    },
    es: {
      presets: [
        [ 'env', {
          loose: true,
          modules: false
        } ]
      ]
    },
    'styled-components': {
      presets: [
        [ 'env', {} ]
      ],
      plugins: [
        [ 'transform-rename-import', {
          replacements: [
            {
              original: '^react-emotion$',
              replacement: 'styled-components'
            }
          ]
        } ]
      ]
    }
  }
}
